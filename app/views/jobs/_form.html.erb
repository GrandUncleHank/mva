<div class="container">
    <div class="card-panel">
              <% if @job.errors.any? %>
        <% @job.errors.full_messages.each do |msg| %>
        <script type="text/javascript">
    Materialize.toast('<%= msg %>', 10000, 'red')
  </script>
  <% end %>
  <% end %>
  
<%= simple_form_for @job do |f| %>
<%= f.input :title, label: "Job Title" %>
<%= f.input :description %>
<%= f.input :contact, label: "Contact Info" %>
<%= f.button :submit, class: "btn light-blue darken-3" %>
<%= link_to "Cancel", jobs_path, class: "btn waves-effect waves-light red accent-4" %>
<% end %>

</div>
</div>